[Unit]
Description=forward psql in kubernetes
After=docker.service

[Service]
ExecStart=kubectl port-forward --namespace default svc/psql-cluster-postgresql 5432:5432
Restart=always
User=${USER}

[Install]
WantedBy=graphical.target