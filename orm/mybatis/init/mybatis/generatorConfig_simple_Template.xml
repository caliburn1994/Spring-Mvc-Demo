<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="simple" targetRuntime="MyBatis3Simple">
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/mydb"
                userId="user"
                password="userpass" >
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaModelGenerator targetPackage="${generate_path}" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="${generate_path}" targetProject="src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="${generate_path}" targetProject="src/main/java"/>

        <!--   ref: http://mybatis.org/generator/usage/mysql.html         -->
        <table tableName="%"/>
    </context>
</generatorConfiguration>