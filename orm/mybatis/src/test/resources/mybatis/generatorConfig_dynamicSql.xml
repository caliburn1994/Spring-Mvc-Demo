<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- ref: https://mybatis.org/generator/quickstart.html -->
        <context id="dsql" targetRuntime="MyBatis3DynamicSql">
            <jdbcConnection
                    driverClass="com.mysql.cj.jdbc.Driver"
                    connectionURL="jdbc:mysql://localhost:3306/mydb"
                    userId="user"
                    password="userpass" >
                <property name="nullCatalogMeansCurrent" value="true" />
            </jdbcConnection>

        <javaModelGenerator targetPackage="${generate_path}.model" targetProject="src/main/java"/>

        <javaClientGenerator targetPackage="${generate_path}.client" targetProject="src/main/java" type="MIXEDMAPPER"/>

            <!--   ref: http://mybatis.org/generator/usage/mysql.html         -->
            <table tableName="%"/>
    </context>
</generatorConfiguration>